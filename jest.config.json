{
  "moduleFileExtensions": ["js", "ts", "json", "vue"],
  "transform": {
    ".*\\.(vue)$": "vue-jest",
    ".*\\.(js)$": "babel-jest",
    "^.+\\.tsx?$": "ts-jest"
  },
  "testURL": "http://localhost/",
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
